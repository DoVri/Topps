<!DOCTYPE html>
<html lang="en" style="background-color: rgba(0, 0, 0, 0); width: 100%; height: 100%">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Select Server - <%= serverName %></title>
    <link rel="icon" type="image/png"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico"
        sizes="16x16" />
    <link rel="shortcut icon"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico"
        type="image/x-icon" />
    <link rel="icon"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico"
        type="image/x-icon" />

    <!-- Bootstrap & Custom CSS -->
    <link media="all" rel="stylesheet"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/faq-main.css" />
    <link media="all" rel="stylesheet"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/shop-custom.css" />
    <link media="all" rel="stylesheet"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/ingame-custom.css" />

    <style>
        .modal-backdrop {
            background-color: rgba(0, 0, 0, 0.1);
        }

        .modal-body, .content {
            padding: 0;
        }

        .form-control.grow-text {
            height: 45px;
            font-size: 16px;
            width: 100%;
            padding: 10px 15px;
            box-sizing: border-box;
        }

        .btn-lg {
            font-size: 16px;
            padding: 10px 20px;
            height: 45px;
            width: 100%;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        .orange-text {
            color: orange !important;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .server-choice-btn {
            background-color: #4da6ff;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            height: 50px;
            margin-bottom: 10px;
            transition: background-color 0.3s ease;
        }

        .server-choice-btn:hover {
            background-color: #3399ff;
            cursor: pointer;
            transform: translateY(-2px);
        }

        .section-title h2 {
            margin-bottom: 20px;
        }

        .server-list-container {
            max-height: 400px;
            overflow-y: auto;
            padding-right: 10px;
        }

        .server-list-container::-webkit-scrollbar {
            width: 8px;
        }

        .server-list-container::-webkit-scrollbar-track {
            background: #0d1117;
        }

        .server-list-container::-webkit-scrollbar-thumb {
            background: #30363d;
            border-radius: 4px;
        }

        .server-list-container::-webkit-scrollbar-thumb:hover {
            background: #58a6ff;
        }

        .server-count {
            text-align: center;
            margin-bottom: 15px;
            color: #c9d1d9;
            font-size: 14px;
        }
    </style>
</head>
<body style="background-color: rgba(0, 0, 0, 0)">
    <button type="button" class="btn btn-primary hidden" data-toggle="modal" id="modalButton" data-target="#modalShow"
        data-backdrop="static" data-keyboard="false"></button>

    <div class="content">
        <section class="common-box">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="modal fade product-list-popup" id="modalShow" tabindex="-1" role="dialog"
                            aria-hidden="false">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <div class="content">
                                            <section class="common-box">
                                                <div class="container">
                                                    <div class="section-title center-align">
                                                        <h2 id="title">JOIN SERVER</h2>
                                                    </div>
                                                    <div class="row div-content-center">
                                                        <div class="col-md-12 col-sm-12" id="server-selection">
                                                            <div class="server-count">
                                                                Available Servers: <%= servers.length %>
                                                            </div>
                                                            <div class="server-list-container" id="server-list">
                                                                <% servers.forEach(function(server) { %>
                                                                    <button class="btn btn-lg server-choice-btn w-100" 
                                                                        data-server="<%= server.port %>" 
                                                                        data-name="<%= server.name %>">
                                                                        <%= server.name %> (Port <%= server.port %>)
                                                                    </button>
                                                                <% }); %>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-12 col-sm-12" id="login-form" style="display: none;">
                                                            <form method="POST" action="/player/growid/login/validate" accept-charset="UTF-8" role="form" required autocomplete="off">
                                                                <input name="_token" type="hidden" value="[object Object]" />
                                                                <input type="hidden" id="selected-server-port" name="server_port" />
                                                                <input type="hidden" id="selected-server-name" name="server_name" />

                                                                <div class="form-group">
                                                                    <input id="login-name"
                                                                        class="form-control grow-text w-100"
                                                                        placeholder="Your Server Name *" name="growId"
                                                                        type="text" />
                                                                </div>
                                                                <div class="form-group">
                                                                    <input id="password"
                                                                        class="form-control grow-text w-100"
                                                                        placeholder="Your Server Password *"
                                                                        name="password" type="password" value="" />
                                                                </div>
                                                                <div class="form-group text-center">
                                                                    <input class="btn btn-lg btn-primary grow-button w-100" type="submit" value="Login" />
                                                                </div>
                                                            </form>

                                                            <form method="GET" action="https://wa.me/6289502691972" target="_blank" role="form">
                                                                <input class="btn btn-lg btn-primary grow-button orange-text w-100"
                                                                    type="submit"
                                                                    value="Lost your password? DM Fulnix on WhatsApp" />
                                                            </form>

                                                            <!-- Registration button that sends to the same endpoint with empty credentials -->
                                                            <form method="POST" action="/player/growid/login/validate" accept-charset="UTF-8" role="form" id="register-form">
                                                                <input name="_token" type="hidden" value="[object Object]" />
                                                                <input type="hidden" id="reg-server-port" name="server_port" />
                                                                <input name="growId" type="hidden" value="" />
                                                                <input name="password" type="hidden" value="" />
                                                                <input class="btn btn-lg btn-primary grow-button w-100" type="submit" value="Don't have an ID? Register here!" />
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/vendors/jquery/jquery-2.1.4.min.js"></script>
    <script src="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/vendors/bootstrap/javascripts/bootstrap.min.js"></script>
    <script>
        let clicked = false;
        $('a').click(function () {
            if (clicked === false) {
                clicked = true;
                return true;
            }
            $(this).attr('onclick', 'return false;');
        });

        $(document).ready(function () {
            document.onkeydown = e => {
                if (e.key == 123) e.preventDefault();
                if (e.key == 'F12') e.preventDefault();
                if (e.ctrlKey && e.shiftKey && e.key == 'I') e.preventDefault();
                if (e.ctrlKey && e.shiftKey && e.key == 'C') e.preventDefault();
                if (e.ctrlKey && e.shiftKey && e.key == 'J') e.preventDefault();
                if (e.ctrlKey && e.key == 'U') e.preventDefault();
            };

            $('#modalButton').trigger('click');

            $('.close').on('click', function () {
                window.location = '/player/validate/close';
            });

            const serverButtons = document.querySelectorAll('.server-choice-btn');
            const titleEl = document.getElementById('title');
            const serverSelection = document.getElementById('server-selection');
            const loginForm = document.getElementById('login-form');
            const nameInput = document.getElementById('login-name');
            const serverPortInput = document.getElementById('selected-server-port');
            const serverNameInput = document.getElementById('selected-server-name');
            const regServerPortInput = document.getElementById('reg-server-port');

            let selectedServer = '<%= serverName %>';
            let selectedPort = '17091';

            serverButtons.forEach(btn => {
                btn.addEventListener('click', function () {
                    selectedPort = this.getAttribute('data-server');
                    selectedServer = this.getAttribute('data-name');

                    // Update placeholder & hidden inputs
                    nameInput.placeholder = `Your ${selectedServer} Name *`;
                    serverPortInput.value = selectedPort;
                    serverNameInput.value = selectedServer;
                    regServerPortInput.value = selectedPort; // Also update registration form's port

                    // Switch view
                    titleEl.textContent = `Login to ${selectedServer}`;
                    serverSelection.style.display = 'none';
                    loginForm.style.display = 'block';
                });
            });

            // Restore growId from localStorage
            if (localStorage.getItem('growId')) {
                document.getElementById('login-name').value = localStorage.getItem('growId');
            }
        });
    </script>
</body> </html>
