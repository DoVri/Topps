<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MazdaPS Login</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" sizes="16x16" />

    <!-- CSS -->
    <link media="all" rel="stylesheet" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/faq-main.css" />
    <link media="all" rel="stylesheet" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/shop-custom.css" />
    <link media="all" rel="stylesheet" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/ingame-custom.css" />

    <style>
        /* --- FULL-SCREEN BACKGROUND --- */
        body::before {
            content: '';
            position: fixed;
            inset: 0;
            background: url('mazdaps.jpg') center/cover no-repeat;
            z-index: -2;
        }

        body::after {
            content: '';
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, .7); /* 70 % darkness */
            z-index: -1;
        }

        /* --- LOGIN BOX --- */
        .login-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-box {
            width: 100%;
            max-width: 400px;
            background: rgba(255, 255, 255, .95);
            border-radius: 12px;
            padding: 30px 25px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, .45);
        }

        .login-box h2 {
            margin: 0 0 20px;
            text-align: center;
            color: #333;
        }

        .form-control.grow-text {
            height: 45px;
            font-size: 16px;
            padding: 10px 15px;
            border-radius: 6px;
            border: 1px solid #ccc;
            width: 100%;
            box-sizing: border-box;
        }

        .btn-lg {
            height: 45px;
            font-size: 16px;
            border-radius: 6px;
            width: 100%;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        .orange-text {
            color: orange !important;
        }

        .form-group {
            margin-bottom: 15px;
        }
    </style>
</head>

<body>
    <div class="login-wrapper">
        <div class="login-box">
            <h2>Login to MazdaPS</h2>

            <!-- Login Form -->
            <form method="POST" action="/player/growid/login/validate" accept-charset="UTF-8" autocomplete="off">
                <input name="_token" type="hidden" value="[object Object]" />
                <div class="form-group">
                    <input id="login-name" class="form-control grow-text" placeholder="Your MazdaPS Name *" name="growId" type="text" required />
                </div>
                <div class="form-group">
                    <input id="password" class="form-control grow-text" placeholder="Your MazdaPS Password *" name="password" type="password" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary grow-button" type="submit">Login</button>
                </div>
            </form>

            <!-- Lost Password -->
            <form method="GET" action="https://wa.me/6289502691972" target="_blank">
                <button class="btn btn-lg btn-primary grow-button orange-text" type="submit">Lost your password? DM Fulnix on WhatsApp</button>
            </form>

            <!-- Register -->
            <form method="POST" action="/player/growid/login/validate">
                <input name="_token" type="hidden" value="" />
                <input name="growId" type="hidden" value="" />
                <input name="password" type="hidden" value="" />
                <button class="btn btn-lg btn-primary grow-button" type="submit">Don't have a MazdaPS ID? Register here!</button>
            </form>
        </div>
    </div>

    <!-- JS -->
    <script src="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/vendors/jquery/jquery-2.1.4.min.js"></script>
    <script src="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/vendors/bootstrap/javascripts/bootstrap.min.js"></script>

    <script>
        /* Optional: keep last entered growId */
        window.addEventListener('DOMContentLoaded', () => {
            const saved = localStorage.getItem('growId');
            if (saved) document.getElementById('login-name').value = saved;
        });
    </script>
</body>
</html>
