<!DOCTYPE html>
<html lang="en" style="background-color: rgba(0, 0, 0, 0); width: 100%; height: 100%">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Select Server - <%= serverName %></title>
    <link rel="icon" type="image/png"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico"
        sizes="16x16" />
    <link rel="shortcut icon"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico"
        type="image/x-icon" />
    <link rel="icon"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico"
        type="image/x-icon" />

    <!-- Bootstrap & Custom CSS -->
    <link media="all" rel="stylesheet"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/faq-main.css" />
    <link media="all" rel="stylesheet"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/shop-custom.css" />
    <link media="all" rel="stylesheet"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/ingame-custom.css" />

    <style>
        .modal-backdrop {
            background-color: rgba(0, 0, 0, 0.1);
        }

        .modal-body, .content {
            padding: 0;
        }

        .form-control.grow-text {
            height: 45px;
            font-size: 16px;
            width: 100%;
            padding: 10px 15px;
            box-sizing: border-box;
        }

        .btn-lg {
            font-size: 16px;
            padding: 10px 20px;
            height: 45px;
            width: 100%;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        .orange-text {
            color: orange !important;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .section-title h2 {
            margin-bottom: 20px;
        }
        
        .server-selection {
            margin-bottom: 20px;
        }
        
        .server-list {
            max-height: 300px;
            overflow-y: auto;
            border: 1px solid #30363d;
            border-radius: 4px;
            padding: 10px;
            background-color: #0d1117;
        }
        
        .server-item {
            padding: 12px;
            margin-bottom: 8px;
            border-radius: 4px;
            cursor: pointer;
            background-color: #161b22;
        }
        
        .server-item:hover {
            background-color: #30363d;
        }
        
        .server-item.selected {
            background-color: #1f6feb;
            color: white;
        }
        
        .continue-btn {
            margin-top: 20px;
        }
    </style>
</head>
<body style="background-color: rgba(0, 0, 0, 0)">
    <button type="button" class="btn btn-primary hidden" data-toggle="modal" id="modalButton" data-target="#modalShow"
        data-backdrop="static" data-keyboard="false"></button>

    <div class="content">
        <section class="common-box">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="modal fade product-list-popup" id="modalShow" tabindex="-1" role="dialog"
                            aria-hidden="false">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <div class="content">
                                            <section class="common-box">
                                                <div class="container">
                                                    <div class="section-title center-align">
                                                        <h2 id="title">SELECT SERVER</h2>
                                                    </div>
                                                    <div class="row div-content-center">
                                                        <div class="col-md-12 col-sm-12" id="server-selection">
                                                            <div class="server-selection">
                                                                <div class="server-list" id="server-list">
                                                                    <% servers.forEach(function(serverName) { %>
                                                                    <div class="server-item" data-server="<%= serverName %>">
                                                                        â€¢ <%= serverName %>
                                                                    </div>
                                                                    <% }); %>
                                                                </div>
                                                            </div>
                                                            
                                                            <button class="btn btn-lg btn-primary grow-button w-100 continue-btn" id="continue-btn">
                                                                Continue
                                                            </button>
                                                        </div>

                                                        <div class="col-md-12 col-sm-12" id="login-form" style="display: none;">
                                                            <form method="POST" action="/player/growid/login/validate" accept-charset="UTF-8" role="form" required autocomplete="off">
                                                                <input name="_token" type="hidden" value="[object Object]" />
                                                                <input type="hidden" id="selected-server-port" name="server_port" />
                                                                <input type="hidden" id="selected-server-name" name="server_name" />

                                                                <div class="form-group">
                                                                    <input id="login-name"
                                                                        class="form-control grow-text w-100"
                                                                        placeholder="Your Server Name *" name="growId"
                                                                        type="text" />
                                                                </div>
                                                                <div class="form-group">
                                                                    <input id="password"
                                                                        class="form-control grow-text w-100"
                                                                        placeholder="Your Server Password *"
                                                                        name="password" type="password" value="" />
                                                                </div>
                                                                <div class="form-group text-center">
                                                                    <input class="btn btn-lg btn-primary grow-button w-100" type="submit" value="Login" />
                                                                </div>
                                                            </form>

                                                            <form method="GET" action="https://wa.me/6289502691972" target="_blank" role="form">
                                                                <input class="btn btn-lg btn-primary grow-button orange-text w-100"
                                                                    type="submit"
                                                                    value="Lost your password? DM Fulnix on WhatsApp" />
                                                            </form>

                                                            <!-- Registration button that redirects to external registration page -->
                                                            <button class="btn btn-lg btn-primary grow-button w-100" id="register-btn">
                                                                Don't have an ID? Register here!
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/vendors/jquery/jquery-2.1.4.min.js"></script>
    <script src="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/vendors/bootstrap/javascripts/bootstrap.min.js"></script>
    <script>
        let clicked = false;
        $('a').click(function () {
            if (clicked === false) {
                clicked = true;
                return true;
            }
            $(this).attr('onclick', 'return false;');
        });

        $(document).ready(function () {
            document.onkeydown = e => {
                if (e.key == 123) e.preventDefault();
                if (e.key == 'F12') e.preventDefault();
                if (e.ctrlKey && e.shiftKey && e.key == 'I') e.preventDefault();
                if (e.ctrlKey && e.shiftKey && e.key == 'C') e.preventDefault();
                if (e.ctrlKey && e.shiftKey && e.key == 'J') e.preventDefault();
                if (e.ctrlKey && e.key == 'U') e.preventDefault();
            };

            $('#modalButton').trigger('click');

            $('.close').on('click', function () {
                window.location = '/player/validate/close';
            });

            const serverSelection = document.getElementById('server-selection');
            const loginForm = document.getElementById('login-form');
            const nameInput = document.getElementById('login-name');
            const serverPortInput = document.getElementById('selected-server-port');
            const serverNameInput = document.getElementById('selected-server-name');
            const registerBtn = document.getElementById('register-btn');
            const continueBtn = document.getElementById('continue-btn');

            let selectedServer = '<%= serverName %>';
            let selectedPort = '17091';

            // Server selection logic
            document.querySelectorAll('.server-item').forEach(item => {
                item.addEventListener('click', function() {
                    // Remove selected class from all items
                    document.querySelectorAll('.server-item').forEach(i => {
                        i.classList.remove('selected');
                    });
                    
                    // Add selected class to clicked item
                    this.classList.add('selected');
                    selectedServer = this.dataset.server;
                    
                    // Set port based on server selection
                    const serverPorts = {
                        'MazdaPS': '17091',
                        'RunPS': '17092',
                        // Add more servers dynamically
                    };
                    selectedPort = serverPorts[selectedServer] || '17091';
                });
            });

            // Continue button click
            continueBtn.addEventListener('click', function() {
                if (!selectedServer) {
                    alert('Please select a server first');
                    return;
                }
                
                // Update form inputs
                nameInput.placeholder = `Your ${selectedServer} Name *`;
                serverPortInput.value = selectedPort;
                serverNameInput.value = selectedServer;
                
                // Switch view
                document.getElementById('title').textContent = `Login to ${selectedServer}`;
                serverSelection.style.display = 'none';
                loginForm.style.display = 'block';
                
                // Update register button with selected server
                registerBtn.textContent = `Don't have a ${selectedServer} ID? Register here!`;
            });

            // Handle register button click
            registerBtn.addEventListener('click', function() {
                // Open registration page in new window with server parameter
                window.open(`https://privates.icu/register?server=${encodeURIComponent(selectedServer)}`, '_blank');
            });

            // Restore growId from localStorage
            if (localStorage.getItem('growId')) {
                document.getElementById('login-name').value = localStorage.getItem('growId');
            }
        });
    </script>
</body> </html>
